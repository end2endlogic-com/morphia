[
   {
      $group:
      {
         _id: {"gameId": "$gameId"},
         gamescores:
            {
               $bottomN:
                  {
                    output: "$score",
                    sortBy: { "score": -1 },
                     n: { $cond: [ {$eq: ["$gameId","G2"] }, 1, 3 ] },
                  }
            }
      }
   }
] 